@using NoteTakingApp.Models.DTO
@model LoginData


<div class="container">
    <div class="card mx-auto p-2 text-center my-2 w-50">
        Note Keeper
    </div>
    <div class="card mx-auto p-4 w-50">
        <div class="row text-center"><h3>Sign in to Note Keeper</h3></div>
        @if (TempData["Msg"] != null)
        {
            <div class="alert alert-danger">
                <br />
                <p class="text-danger">@TempData["Msg"]</p>
            </div>
        }
        <form method="post">
            <div class="row">
                <div class="col">
                    <input type="text" asp-for="@Model.Email"  class="form-control" placeholder="Email"/>
                    <span class="text-danger my-1" asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="row my-3">
                <div class="col">
                    <input type="password" asp-for="@Model.Password" class="form-control" placeholder="Password" />
                    <span class="text-danger my-1" asp-validation-for="Password"></span>

                </div>
            </div>
            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-success w-100">Sign in</button>
                </div>
            </div>
        </form>
    </div>
    <div class="card mx-auto p-2 text-center my-2 w-50">
        <p>Don't have an account? &nbsp; <a href="/auth/register">register</a></p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}